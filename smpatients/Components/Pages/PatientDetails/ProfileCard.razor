<div class="stretch-card mb-1 grid-margin rounded border border-2 @(pt.Completed == true ? "border-success" : "border-warning") ">
    <div class="card card-img-holder m-0 ">
        <div class="card-body p-3 m-0">
            <img src="assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                
            <div class="d-flex align-items-top gap-3">
                <div class="nav-profile ">
                    <div class="nav-profile-img">
                    <img src="assets/images/patient.png"  width="80px" height="80px" alt="profile">
                    
                    </div>
                </div>
            <div class=" mb-0 ">
                <div class="d-flex align-itemscenter my-1"><h3 class="me-2 m-0 ">@pt.Name</h3>
                @if(pt.Released){<span class="btn-inverse-info btn-rounded p-1 m-2"><i class="mdi mdi-checkbox-marked-circle small m-1 p-0 text-success"></i> Released</span>}
                </div>
                <div class="flex-row d-flex flex-wrap my-2 mx-auto gap-1">
                    <div class="d-flex align-items-center me-4  font-weight-light">
                        <i class="mdi mdi-account-search  me-2"></i><span><strong>App ID: </strong>@pt?.AppId</span>
                    </div>
                    @if(pt?.PhoneNew!="")
                    {
                    <div class="d-flex align-items-center me-4  font-weight-light">
                        <i class="mdi mdi-cellphone-basic  me-2"></i><span><strong>Phone: </strong>@pt?.PhoneNew</span>
                    </div>
                    }
                    @if (pt.DateRegistered!=null)
                    {
                    <div class="d-flex align-items-center me-4  font-weight-light">
                        <i class="mdi mdi-mdi mdi-timetable  me-2"></i><span> <strong>Registered:</strong>  @(pt.DateRegistered.ToString("dd MMM yyyy") ??  "")</span>
                    </div>
                    }
                
                    @{
                    int calculatedAge = CalculateAge(pt?.Dob);
                    if (calculatedAge < 130 && calculatedAge!=0)
                    {
                    <div class="d-flex align-items-center me-4  font-weight-light">
                            <i class="mdi mdi-account-star  me-2"></i><span><strong>Age: </strong>
                                @calculatedAge
                            </span>
                        </div>
                    }
                    if (pt.Dob!=null && pt.Dob.Value.ToString("dd MMM yyyy")!="01 Jan 0001")
                    {
                        
                        <div class="d-flex align-items-center me-4 gap-1 font-weight-light">
                            <i class="mdi mdi-account-star  me-2"></i><span>
                        <strong>DOB: </strong> @(pt.Dob.Value.ToString("dd MMM yyyy") ??  "")
                            </span>
                        </div>
                    }
                    }
                    @if(pt?.City!="")
                    {
                    <div class="d-flex align-items-center me-4  font-weight-light">
                    <i class="mdi mdi-map-marker  me-2"></i><span><strong>City: </strong> @pt?.City</span>
                    </div>  
                    }
                    <div class="d-flex align-items-center me-4  font-weight-light   ">
                        <i class="mdi mdi-map-marker-radius  me-2 "></i><span><strong>State: </strong> @pt?.State</span>
                    </div>
                </div>
                <div class="row">
                <div class="col-md-8">
                @if (pt != null && pt.Completed == true)
                {
                <button class="btn btn-gradient-success btn-icon-text btn-sm">
                    <i class="mdi mdi-checkbox-marked-circle text-success" ></i> 
                    <span  style="color: #000;">Complete Application</span>
                </button>
                }
                else
                {                
                <button class="btn btn-gradient-warning btn-icon-text btn-sm" >
                    <i class="mdi mdi-alert text-danger"></i>
                    <span style="color: #000;">Uncomplete Application</span>
                </button>
                }
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter] public Patient pt { get; set; } = new();
    private int CalculateAge(DateTime? dob)
    {
        if (dob.HasValue)
        {
            DateTime today = DateTime.Today;
            int age = today.Year - dob.Value.Year;

            // Adjust age if birthday hasn't occurred yet this year
            if (dob.Value.Date > today.AddYears(-age))
            {
                age--;
            }

            return age;
        }

        return 0;
    }
}
