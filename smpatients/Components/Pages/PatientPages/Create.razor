@code {

    [SupplyParameterFromForm]
    public Patient Patient { get; set; } = new();
   int appId = 0;

    // To protect from overposting attacks, see https://aka.ms/RazorPagesCRUD
   protected override  void OnInitialized()
    {
        try
        {
            var lastPatient = DB.patients.OrderByDescending(p => p.AppId).FirstOrDefault();
            
            if (lastPatient != null)
            {
               
                appId = lastPatient.AppId +1;
                Patient.AppId = appId; // Set the value of AppId in the Patient object
            }
            else{
                appId =  10000;
                Patient.AppId = appId; // Set the value of AppId in the Patient object
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("AppId issue:" + ex.Message);
        }
    }

    public async Task AddPatient()
    {
        var isCompleted = patientService.IsPatientComplete(Patient);
        Patient.Completed = isCompleted;
        DB.patients.Add(Patient);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/");
    }

}
